{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://tmi.mobi/user/user.schema.json",

  "type": "object",
  "title": "User",
  "properties": {

    "id":  {
      "allOf": [
        {"$ref": "http://tmi.mobi/root.schema.json#/definitions/id"},
        {
          "title": "User ID",
          "description": "Unique User Identifier"
        }
      ],
      "isUniqueKey": true
    },

    "username": {
      "title": "Username",
      "Description": "Unique chosen name",
      "type": "string",
      "pattern": "^[A-Za-z0-9-_]{1,50}$",
      "errorMessage": "should be 1 to 50 characters in length",
      "isUniqueKey": true
    },

    "email": {
      "allOf": [
        {"$ref": "http://tmi.mobi/root.schema.json#/definitions/email"},
        {
          "title": "Email",
          "Description": "Email address to retrieve login details."
        }
      ]
    },

    "password": {
      "type": "string",
      "title": "Password",
      "description": "Password used to authenticate the account",
      "minlength": 6,
      "maxlength": 50,
      "errorMessage": "should be 6 to 50 characters in length"
    },

    "privacy": {"$ref": "http://tmi.mobi/root.schema.json#/definitions/privacy"},

    "status": {
      "title": "Status",
      "type": "string",
      "enum": [
        "draft",
        "active",
        "retired",
        "locked",
        "suspended"
      ],
      "default": "draft"
    }
  },

  "mutable": ["username", "email", "password", "privacy", "status"],
  "required": ["username", "email", "password"]
}
