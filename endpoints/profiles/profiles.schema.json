{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://tmi.mobi/profile/profile.schema.json",
  "type": "object",
  "properties": {

    "id": {"$ref": "http://tmi.mobi/root.schema.json#/definitions/id"},

    "name": {
      "title": "Profile name",
      "Description": "Name of the profile.",
      "type": "string",
      "pattern": "^(\\s?\\S+\\s?){1,10}$",
      "errorMessage": "should only be 1 to 10 words",
      "isUniqueKey": true
    },

    "owner": {"$ref": "http://tmi.mobi/root.schema.json#/definitions/participant"},

    "schema": {"type": "object"}
  },

  "required": ["name", "owner", "schema"]
}